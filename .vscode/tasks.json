{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "command": "make",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Assemble test code",
            "command": "nasm",
            "args": ["-fbin","-oprog.bin","prog.asm"],
            "problemMatcher": []
        },
        {
            "label": "Run",
            "command": "${workspaceFolder}/main",
            "problemMatcher": [],
            "dependsOn": ["Compile","Assemble test code"]
        },
        {
            "label": "Verilate",
            "command": "verilator",
            "args": ["--binary","-j","0","-Wall","-Wno-unusedsignal","-Wno-genunnamed","-y","seq-hw","ptest"]
        },
        {
            "label": "Run Hardware Sim",
            "command": "${workspaceFolder}/obj_dir/Vptest",
            "problemMatcher": [],
            "dependsOn": ["Verilate"],
            "group": "test"
        }
    ]
}
